-%><h3>Is this you?</h3>

<% @entities.each do |entity|
	vol_session = entity.current_volunteer_session %>
<b><%= link_to_remote entity.name, :url=>{:controller=>"entities", :action=>"simple_show_for_sign_out", :id=>entity.id} %></b><br />
<%= entity.primary_address.line_1.to_s+"<br />" unless entity.primary_address.line_1.to_s == ""%><br />
