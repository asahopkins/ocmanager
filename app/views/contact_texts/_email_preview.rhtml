-%><h3>Preview:</h3>
<% if @message.stylesheet -%>
<div id="styled_body">
	<div id="preview_styles">
		<%= render :partial=>"mailer/styles", :locals=>{:stylesheet=>@message.stylesheet} %>
	</div>

	<div id="preview_content">
<center>If you cannot read the message below, please use your email program to view it in plain text.  Thank you.</center>	<div id="OutsideBox">
	<div id="MessageBox">
		<div id="OCMessage">
			<% if @message.formatted_text %>
			<%= white_list @message.formatted_text %>
			<% else %>
			<%= white_list blockify_h1s(BlueCloth.new(@message.text.to_s).to_html) %>
			<% end %>
		</div>
	</div>
	</div>
	</div>
</div>
<% else -%>
<pre><%= white_list @message.text %></pre>
<% end -%>