-%><style type="text/css">

#OutsideBox {
	color: #000;
	background: #<%= white_list stylesheet.side_bg %>;
	margin: 0px;
	padding: 0px;
	width: 800px;
	font-family: Georgia, Helvetica, Verdana, sans-serif;
	text-align: center;
}

#MessageBox {
	width: 700px;
	margin-left: auto;
	margin-right: auto;
	text-align: left;
}

#OCMessage {
	background: #<%= white_list stylesheet.body_bg %>;
}

.h1_block {
	background: #<%= white_list stylesheet.title_bg %>;
	text-align: <%= white_list stylesheet.h1_align %>;
	color: #<%= white_list stylesheet.h1_color %>;
	width: 96%;
	padding-top: 2px;
	padding-bottom: 2px;
	padding-left: 2%;
	padding-right: 2%;
}

#OutsideBox p  {
	color: #<%= white_list stylesheet.p_color %>;
	font-size: <%= white_list stylesheet.p_size %>pt;
	font-family: <%= white_list  stylesheet.p_serif? ? "Georgia, Times, serif" : "Helvetica, Verdana, sans-serif" %>;
	padding-left: 15px;
	padding-right: 15px;
}

#OutsideBox h1 {
	font-size: <%= white_list stylesheet.h1_size %>pt;
	font-weight: <%= white_list stylesheet.h1_weight %>;
	font-family: <%= white_list  stylesheet.h1_serif? ? "Georgia, Times, serif" : "Helvetica, Verdana, sans-serif" %>;
}

#OutsideBox h2 {
	color: #<%= white_list stylesheet.h2_color %>;
	background: #<%= white_list stylesheet.body_bg %>;
	font-size: <%= white_list stylesheet.h2_size %>pt;
	font-weight: <%= white_list stylesheet.h2_weight %>;
	font-family: <%= white_list  stylesheet.h2_serif? ? "Georgia, Times, serif" : "Helvetica, Verdana, sans-serif" %>;
	text-align: <%= white_list stylesheet.h2_align %>;
	padding-left: 10px;
	padding-right: 10px;
}

#OutsideBox h3 {
	color: #<%= white_list stylesheet.h3_color %>;
	font-size: <%= white_list stylesheet.h3_size %>pt;
	font-weight: <%= white_list stylesheet.h3_weight %>;
	font-family: <%= white_list  stylesheet.h3_serif? ? "Georgia, Times, serif" : "Helvetica, Verdana, sans-serif" %>;
	text-align: <%= white_list stylesheet.h3_align %>;
	padding-left: 10px;
	padding-right: 10px;
}

#OutsideBox h4 {
	color: #<%= white_list stylesheet.h4_color %>;
	font-size: <%= white_list stylesheet.h4_size %>pt;
	font-weight: <%= white_list stylesheet.h4_weight %>;
	font-family: <%= white_list  stylesheet.h4_serif? ? "Georgia, Times, serif" : "Helvetica, Verdana, sans-serif" %>;
	text-align: <%= white_list stylesheet.h4_align %>;
	padding-left: 10px;
	padding-right: 10px;
}

#OutsideBox h5 {
	color: #<%= white_list stylesheet.h5_color %>;
	font-size: <%= white_list stylesheet.h5_size %>pt;
	font-weight: <%= white_list stylesheet.h5_weight %>;
	font-family: <%= white_list  stylesheet.h5_serif? ? "Georgia, Times, serif" : "Helvetica, Verdana, sans-serif" %>;
	text-align: <%= white_list stylesheet.h5_align %>;
	padding-left: 10px;
	padding-right: 10px;
}

#OutsideBox a {
	color: #<%= white_list stylesheet.a_color %>;
	text-decoration: <%= white_list stylesheet.a_decoration %>;
}

#OutsideBox a:visited {
	color: #<%= white_list stylesheet.a_color %>;
	text-decoration: <%= white_list stylesheet.a_decoration %>;
}

#OutsideBox em {
	font-weight: <%= white_list stylesheet.em_weight %>;
	font-style: <%= white_list stylesheet.em_style %>;
}

#OutsideBox strong {
	font-weight: <%= white_list stylesheet.strong_weight %>;
	font-style: <%= white_list stylesheet.strong_style %>;
}

#OutsideBox ul li {
	list-style: <%= white_list stylesheet.ul_type %>;
	color: #<%= white_list stylesheet.p_color %>;
	font-size: <%= white_list stylesheet.p_size %>pt;
	font-family: <%= white_list  stylesheet.p_serif? ? "Georgia, Times, serif" : "Helvetica, Verdana, sans-serif" %>;
}

#OutsideBox ol li {
	list-style: <%= white_list stylesheet.ol_type %>;
	color: #<%= white_list stylesheet.p_color %>;
	font-size: <%= white_list stylesheet.p_size %>pt;
	font-family: <%= white_list  stylesheet.p_serif? ? "Georgia, Times, serif" : "Helvetica, Verdana, sans-serif" %>;	
}

#OutsideBox hr {
	height: <%= white_list stylesheet.hr_height %>px;
	width: <%= white_list stylesheet.hr_width %>%;
	color: #<%= white_list stylesheet.hr_color %>;
	background-color: #<%= white_list stylesheet.hr_color %>;
}
</style>
